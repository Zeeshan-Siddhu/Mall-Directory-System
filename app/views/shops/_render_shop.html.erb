<tr id="<%= shop.id %>">
  <td id="name_<%= shop.id %>"><%= shop.name %></td>
  <td id="location_<%= shop.id %>"><%= shop.location %></td>
  <td><span><%= link_to "#", class: 'btn-small edit-information', title: 'Click to edit shop information' do %>
    <i class="glyphicon glyphicon-pencil"></i>  
    <% end %>
    <%= link_to shop_path(shop), method: :delete, remote: true, data: { confirm: 'Are you certain you want to delete this?' }, class: 'btn-small', title: 'Click to remove shop information' do %>
    <i class="glyphicon glyphicon-remove"></i>  
    <% end %>
    </span>
  </td>
</tr>